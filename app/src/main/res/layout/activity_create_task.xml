<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CreateTask">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple_500"
        android:orientation="horizontal"
        android:layout_marginBottom="20sp">
        <Button
            android:layout_weight="1"
            android:id="@+id/toTasks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textStyle="bold"
            android:text="Checklist"
            android:textColor="@color/teal_200" />
        <Button
            android:layout_weight="1"
            android:id="@+id/toCalendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textStyle="bold"
            android:text="Calendar"
            android:textColor="@color/teal_200" />
        <Button
            android:layout_weight="1"
            android:id="@+id/toSomething"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textStyle="bold"
            android:text="Something"
            android:textColor="@color/teal_200" />
    </LinearLayout>
    <LinearLayout
        android:layout_margin="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_weight="4"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <EditText
                android:textColor="@color/black"
                android:backgroundTint="@color/grey"
                android:layout_weight="1"
                android:id="@+id/nameOfHabit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textSize="20sp"
                android:autofillHints="@string/nameHint"
                android:hint="@string/nameHint"
                android:inputType="text"
                android:text="" />
            <EditText
                android:textColor="@color/black"
                android:backgroundTint="@color/grey"
                android:layout_weight="2"
                android:id="@+id/infoHabit"
                android:textSize="14dp"
                android:ems="10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/infoHint"
                android:autofillHints="@string/infoHint"
                android:inputType="text"
                android:text="" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/seeDate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:textSize="20dp"
                android:textAlignment="center"
                android:text="MM/DD/YYYY" />
            <TextView
                android:id="@+id/seeTime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:textSize="12dp"
                android:textAlignment="center"
                android:text="00:00" />
            <Button
                android:id="@+id/pickDateTime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Time/Date" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_weight="1"
            android:id="@+id/saveBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="save" />
        <Button
            android:layout_weight="1"
            android:id="@+id/cancelBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="cancel" />
    </LinearLayout>
</LinearLayout>